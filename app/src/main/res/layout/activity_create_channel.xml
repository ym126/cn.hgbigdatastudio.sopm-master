<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CreateChannelActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titleColor"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/title_Return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/fan"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:text="创建通道"
            android:textColor="@color/titleTextColor"
            android:textSize="30sp"
            android:gravity="center"
            />

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_alignParentRight="true"
        android:id="@+id/name_text"
        android:layout_width="300dp"
        android:gravity="right"
        android:layout_height="50dp"
        android:hint="请填写"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:maxLines="1"
        android:background="@null"
        android:layout_marginRight="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_Cross_line"
        android:layout_below="@id/name_text"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通道地址"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/ChannelAddress_text"
            android:layout_width="300dp"
            android:gravity="right"
            android:layout_height="50dp"
            android:hint="请填写"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:background="@null"
            android:layout_marginRight="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_Cross_line"
            android:layout_below="@id/ChannelAddress_text"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单位"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/unit_text"
            android:layout_width="300dp"
            android:gravity="right"
            android:layout_height="50dp"
            android:hint="请填写"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:background="@null"
            android:layout_marginRight="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_Cross_line"
            android:layout_below="@id/unit_text"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最小量程"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/minimumRange_text"
            android:layout_width="300dp"
            android:gravity="right"
            android:layout_height="50dp"
            android:hint="请填写"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:background="@null"
            android:layout_marginRight="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_Cross_line"
            android:layout_below="@id/minimumRange_text"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最大量程"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/maximumRange_text"
            android:layout_width="300dp"
            android:gravity="right"
            android:layout_height="50dp"
            android:hint="请填写"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:background="@null"
            android:layout_marginRight="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_Cross_line"
            android:layout_below="@id/maximumRange_text"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警值1"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/Image_right1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/touxiang"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_Cross_line"
            android:layout_below="@id/Image_right1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警值2"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/Image_right2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/touxiang"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_Cross_line"
            android:layout_below="@id/Image_right2"/>
    </RelativeLayout>

<Button
    android:layout_marginTop="15dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="250dp"
    android:layout_height="60dp"
    android:textSize="20sp"
    android:text="立即创建"
    />

</LinearLayout>